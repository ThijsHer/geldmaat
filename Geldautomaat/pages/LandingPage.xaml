                        <Grid>
                            <Ellipse Stroke="White"
                                     StrokeThickness="3"
                                     Fill="Black" />
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
