                </Button.Template>
            </Button>
        </Grid>
        <Grid Margin="10,56,14,56"
              Grid.Column="8"
              Grid.RowSpan="6"
              Grid.Row="1">
            <Button  Width="50"
                     Height="50"
                     Content="1"
                     Margin="10,-14,4,190"
                     RenderTransformOrigin="0.562,0.099">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Stroke="White"
