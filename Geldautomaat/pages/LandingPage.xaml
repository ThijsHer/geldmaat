            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="133*" />
        </Grid.ColumnDefinitions>
        <Label Content=""
               Grid.Column="0"
               Grid.Row="0"
               Background="#feca2f"
               Grid.ColumnSpan="10" />
        <Label Content=""
               Grid.Column="0"
               Grid.Row="7"
               Background="#feca2f"
               Grid.ColumnSpan="10" />
        <Label Content=""
               Grid.Column="9"
               Grid.RowSpan="7"
